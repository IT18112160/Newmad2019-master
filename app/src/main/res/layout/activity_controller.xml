<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/newActionBar"
    tools:context=".commonUtilDevice.Controller"
    android:layout_gravity="center_vertical|center_horizontal">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginBottom="30dp"
        android:background="#1A2955"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/b1"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_weight="1"
            android:background="@drawable/homew"
            android:textOff="@string/menu"
            android:textOn="@string/menu" />

        <Button
            android:id="@+id/b2"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginRight="24dp"
            android:layout_weight="1"
            android:background="@drawable/alarm"
            android:textOff="@string/menu"
            android:textOn="@string/menu" />

        <Button
            android:id="@+id/b3"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:layout_weight="1"
            android:background="@drawable/more"
            android:textOff="@string/menu"
            android:textOn="@string/menu" />

        <Button
            android:id="@+id/b4"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:layout_weight="1"
            android:background="@drawable/setting"
            android:textOff="@string/menu"
            android:textOn="@string/menu" />
    </LinearLayout>

    <fragment
        android:id="@+id/fgmntDefault"
        android:name="com.smartL.mad.Controllerf"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>